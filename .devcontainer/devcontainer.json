{
	"name": "Starter Kit",
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"esbenp.prettier-vscode",
				"ms-playwright.playwright",
				"vitest.explorer"
			]
		}
	},
	"dockerComposeFile": "./docker-compose.yml",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": false
		}
	},
	"forwardPorts": [3000, 3100],
	"mounts": [
		{
			"type": "volume",
			"target": "${containerWorkspaceFolder}/node_modules",
			"source": "node-modules-${devcontainerId}"
		},
		{
			"type": "volume",
			"target": "/home/node/.npm",
			"source": "npm-cache-${devcontainerId}"
		},
		{
			"type": "volume",
			"target": "/home/node/.cache/ms-playwright",
			"source": "playwright-cache-${devcontainerId}"
		}
	],
	"postCreateCommand": "sudo chown -R node /home/node && npm ci && npx playwright install --with-deps",
	"remoteUser": "node",
	"service": "app",
	"workspaceFolder": "/workspace"
}
