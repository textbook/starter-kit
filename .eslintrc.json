{
	"extends": ["@codeyourfuture/standard", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"plugins": ["import"],
	"reportUnusedDisableDirectives": true,
	"root": true,
	"rules": {
		"import/order": [
			"error",
			{ "alphabetize": { "order": "asc" }, "newlines-between": "always" }
		]
	}
}
