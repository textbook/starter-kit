{
  "name": "starter-kit",
  "version": "0.0.1",
  "description": "Starter kit for full-stack JavaScript projects",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "build:client": "webpack --config client/webpack/prod.config.js",
    "build:server": "babel server --out-dir dist --ignore \"**/*.test.js\"",
    "cleanup": "rimraf ./dist/*",
    "predev": "npm run cleanup",
    "dev": "concurrently -k -n \"client,build,serve\" \"npm run dev:client\" \"npm run dev:build\" \"npm run dev:serve\"",
    "dev:build": "npm run build:server -- --source-maps --watch",
    "dev:client": "webpack-dev-server --config client/webpack/dev.config.js",
    "dev:serve": "wait-on -l file:dist/server.js && cross-env PORT=3100 nodemon dist/server.js --watch dist",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm run serve\" \"npm run e2e:safe\"",
    "e2e:dev": "cypress open",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on -l http-get://localhost:3000 && npm run e2e:run",
    "pree2e:docker": "docker-compose build",
    "e2e:docker": "docker-compose run e2e run e2e:run || (npm run poste2e:docker && exit 1)",
    "poste2e:docker": "docker-compose down",
    "lint": "eslint .",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/starter-kit.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/starter-kit/issues"
  },
  "homepage": "https://github.com/textbook/starter-kit#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@codeyourfuture/eslint-config-standard": "^2.0.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "axe-core": "^3.4.0",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "cypress": "^3.6.1",
    "cypress-axe": "^0.5.1",
    "cypress-multi-reporters": "^1.2.3",
    "eslint": "^6.7.1",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^4.3.0",
    "html-webpack-externals-plugin": "^3.8.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "nodemon": "^2.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-jss": "^10.0.0",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "wait-on": "^3.3.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.2",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1"
  }
}
