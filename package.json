{
  "name": "starter-kit",
  "version": "0.0.1",
  "description": "Starter kit for full-stack JavaScript projects",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "postbuild": "buildinfo dist/static/build-info.txt",
    "build:client": "webpack --config client/webpack/prod.config.js",
    "build:server": "babel server --copy-files --ignore \"**/*.test.js\" --out-dir dist",
    "postbuild:server": "rimraf ./dist/static ./dist/**/README.md",
    "cleanup": "rimraf ./dist/*",
    "dev": "concurrently --kill-others \"npm:dev:*\"",
    "dev:client": "webpack serve --config client/webpack/dev.config.js",
    "dev:server": "cross-env LOG_LEVEL=debug PORT=3100 nodemon --inspect server/server.js",
    "e2e": "concurrently --kill-others --success first --names \"app,e2e\" \"npm:serve\" \"npm:e2e:safe\"",
    "e2e:dev": "concurrently --kill-others --success first --names \"dev,e2e\" \"npm:dev\" \"npm:e2e:safe\"",
    "e2e:local": "cypress open",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on --log --timeout 60000 http-get://localhost:3000 && npm run e2e:run",
    "lint": "eslint .",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e:dev && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/starter-kit.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "contributors": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/starter-kit/issues"
  },
  "homepage": "https://github.com/textbook/starter-kit#readme",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/node": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@codeyourfuture/eslint-config-standard": "^3.0.3",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@textbook/build-info": "^0.2.5",
    "axe-core": "^4.4.3",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cypress": "^10.4.0",
    "cypress-axe": "^1.0.0",
    "eslint": "^8.21.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "html-webpack-tags-plugin": "^3.0.2",
    "jest": "^28.1.3",
    "jest-circus": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "msw": "^0.44.2",
    "nodemon": "^2.0.19",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "supertest": "^6.2.4",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0",
    "whatwg-fetch": "^3.6.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.1"
  },
  "engines": {
    "node": "^14 || ^16",
    "npm": "^6 || ^7 || ^8"
  }
}
