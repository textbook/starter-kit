{
  "name": "starter-kit",
  "version": "0.0.1",
  "description": "Starter kit for full-stack JavaScript projects",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "postbuild": "buildinfo --output dist/static/build-info.txt",
    "build:client": "webpack --config client/webpack/prod.config.js",
    "build:server": "babel server --copy-files --out-dir dist",
    "postbuild:server": "del-cli ./dist/static ./dist/**/README.md ./dist/**/*.test.js",
    "cleanup": "del-cli ./dist/*",
    "dev": "concurrently --kill-others \"npm:dev:*\"",
    "dev:client": "webpack serve --config client/webpack/dev.config.js",
    "dev:server": "cross-env LOG_LEVEL=debug PORT=3100 nodemon --inspect server/server.js",
    "e2e": "concurrently --kill-others --success first --names \"app,e2e\" \"npm:serve\" \"npm:e2e:safe\"",
    "e2e:dev": "concurrently --kill-others --success first --names \"dev,e2e\" \"npm:dev\" \"npm:e2e:safe\"",
    "e2e:local": "cypress open",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on --log --timeout 60000 http-get://localhost:3000 && npm run e2e:run",
    "lint": "eslint .",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e:dev && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/starter-kit.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "contributors": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/starter-kit/issues"
  },
  "homepage": "https://github.com/textbook/starter-kit#readme",
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.1",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/node": "^7.22.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.22.4",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@codeyourfuture/eslint-config-standard": "^3.0.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@textbook/build-info": "^0.5.1",
    "axe-core": "^4.7.2",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cypress": "^12.13.0",
    "cypress-axe": "^1.4.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "history": "^5.3.0",
    "html-webpack-plugin": "^5.5.1",
    "html-webpack-tags-plugin": "^3.0.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "msw": "^1.2.1",
    "nodemon": "^2.0.22",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "style-loader": "^3.3.3",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.9.0",
    "whatwg-fetch": "^3.6.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.3",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.9.0"
  },
  "engines": {
    "node": "^16.17 || ^18.3 || ^20",
    "npm": ">=8"
  }
}
